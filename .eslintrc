{
  "extends": ["airbnb"],
  "plugins": ["react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "es6": true,
      "classes": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "xdescribe": true,
    "xit": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "React": true
  },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "linebreak-style": 0,
    "no-underscore-dangle": 0
  }
}